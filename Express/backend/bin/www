#!/usr/bin/env node
const { port } = require('../config');

const app = require('../app');
const db = require('../db/models');

db.sequelize
  .authenticate()
  .then(() => {
    console.log('Sequelize connected.');
    app.listen(port, () => console.log(`UP successful. Bind:${port}...`));
  })
  .catch(err => {
    console.log('Database connection failure.');
    console.error(err);
  });
